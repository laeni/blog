<% if (post.link){ %>
  <h2 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" itemprop="url"><%= post.title %></a>
  </h2>
<% } else if (post.title){ %>
  <% if (isIndex) { %>
    <h2 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %><%- partial('topping') %></a>
    </h2>
  <% } else { %>
    <h2 class="sea-center" style="border-left:0" itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %><%- partial('topping') %></a>
    </h2>
  <% }
} %>
